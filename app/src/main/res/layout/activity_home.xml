<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_soft">

    <!-- App Brand -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MYHazard"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_secondary"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:paddingTop="18dp"
        android:paddingBottom="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnLogout"/>

    <!-- Logout top-right -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:text="Log out"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="13sp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="12dp"
        app:strokeColor="@color/danger"
        app:strokeWidth="1dp"
        app:backgroundTint="@color/bg_main"
        android:textColor="@color/danger"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Greeting -->
    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hi, User"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Track your location and view hazards nearby"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvGreeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Location Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/bg_main"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvLocTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Location"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"/>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Address: -"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="2dp"/>

            <TextView
                android:id="@+id/tvLatLng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Lat: - | Lng: -"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvStatusChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/success"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/bg_chip_success"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text=" "
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRefreshLocation"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="14dp"
                android:text="Refresh Location"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="15sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/primary"
                android:textColor="@color/bg_main"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Quick Actions Title -->
    <TextView
        android:id="@+id/tvQuickActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quick Actions"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="14dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/cardLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tiles Grid -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/actionGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvQuickActions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Hazard Map tile -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardHazardMap"
            android:layout_width="0dp"
            android:layout_height="104dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/bg_main"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardAbout"
            app:layout_constraintHorizontal_weight="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hazard Map"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="View nearby markers"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnHazardMap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text=""/>
            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- About tile -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAbout"
            android:layout_width="0dp"
            android:layout_height="104dp"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/bg_main"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardHazardMap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Project and features"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnAbout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text=""/>
            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Report Hazard tile -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardReport"
            android:layout_width="0dp"
            android:layout_height="104dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/bg_main"
            app:layout_constraintTop_toBottomOf="@id/cardHazardMap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Report Hazard"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Submit hazard to map"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>

                <!-- Click overlay (IMPORTANT: keep this ID) -->
                <Button
                    android:id="@+id/btnReportHazard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text=""/>
            </FrameLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom illustration -->
    <ImageView
        android:id="@+id/imgBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/people_illustration"
        android:scaleType="fitCenter"
        android:alpha="0.95"
        app:layout_constraintTop_toBottomOf="@id/actionGrid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
